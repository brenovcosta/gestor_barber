<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="202110042248-3" author="breno">

        <createTable tableName="agenda" remarks="Tabela contendo dados de agenda">
            <column name="id" type="bigint" remarks="Um inteiro, contendo o identificador de agenda.">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="inicio" type="datetime" remarks="Uma string, contendo o inicio de horário da agenda.">
                <constraints nullable="false"/>
            </column>
            <column name="fim" type="datetime" remarks="Uma string, contendo o fim de horário da agenda.">
                <constraints nullable="false"/>
            </column>
            <column name="situacao" type="varchar(20)" remarks="Uma string, contendo a situação do horário da agenda.">
                <constraints nullable="false"/>
            </column>
            <column name="id_pessoa" type="bigint" remarks="Um inteiro, contendo o identificador da pessoa que reservou o horário.">
            </column>
            <column name="id_servico" type="bigint" remarks="Um inteiro, contendo o identificador da pessoa que reservou o horário.">
            </column>
        </createTable>

        <addAutoIncrement
                columnDataType="bigint"
                columnName="id"
                incrementBy="1"
                startWith="1"
                tableName="servico"/>

        <addForeignKeyConstraint  baseColumnNames="id_pessoa"
                                  baseTableName="agenda"
                                  constraintName="fk_agenda_pessoa"
                                  referencedColumnNames="id"
                                  referencedTableName="pessoa"/>

        <addForeignKeyConstraint  baseColumnNames="id_servico"
                                  baseTableName="agenda"
                                  constraintName="fk_agenda_servico"
                                  referencedColumnNames="id"
                                  referencedTableName="servico"/>

    </changeSet>

</databaseChangeLog>
